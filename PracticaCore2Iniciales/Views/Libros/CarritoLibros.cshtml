@model List<Libro>

@{
    List<int> listaSession =
Context.Session.GetObject<List<int>>("IdLibro");
}

@if (Context.Session.GetObject<List<int>>("IdLibro") != null)
{

        <a asp-controller="Carrito" asp-action="Carrito">
            Mostrar empleados almacenados
            </a>

            <h2 style ="color:crimson">
                @ViewData["MENSAJE"]
                </h2>

                <ul class ="list-group">
                    @foreach (Empleado emp in Model)
                    {
                        <li class ="list-group-item list-group-item-danger">
                            @emp.Apellido

                            @if (listaSession == null)
                            {
                                <a asp-controller ="Empleados"
                                                                 asp-action="SessionEmpleadosCorrecto"
                                                                 asp-route-idempleado="@emp.IdEmpleado"
                                                                 class="btn btn-info">
                                    Almacenar Empleado
                                    </a>
                                }
                                else
                                {
                                    if (listaSession.Contains(emp.IdEmpleado))
                                    {
                                        <img src ="~/images/empleado.jpg"  
                                                                      style="width: 100px; height: 100px"   />
                                    }
                                    else
                                    {
                                        <a asp-controller ="Empleados"
                                                                             asp-action="SessionEmpleadosCorrecto"
                                                                             asp-route-idempleado="@emp.IdEmpleado"
                                                                             class="btn btn-info">
                                            Almacenar Empleado
                                            </a>
                                        }
                                    }
                            </li>
                        }
                    </ul>

                    <a class="btn-link"
                       asp-controller="Manage"
                       asp-action="FinalizarCompra">
                        Finalizar compra
                    </a>
                }
                else
                {
                    <h1>No hay nada en el carrito</h1>
                }
